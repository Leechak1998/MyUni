<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="posting"
            type="com.example.myuni.model.Posting" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_publisherPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:setImageBitmap1="@{posting.publisherPic}" />

            <TextView
                android:id="@+id/tv_publisherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_publisherPic"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="@{posting.publisherName}" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_publisherPic"
                android:layout_below="@id/tv_publisherName"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@{posting.category}" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:text="@{posting.tittle}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:setImageBitmap1="@{posting.image1}"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:setImageBitmap1="@{posting.image2}"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:setImageBitmap1="@{posting.image3}"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#949494"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</layout>