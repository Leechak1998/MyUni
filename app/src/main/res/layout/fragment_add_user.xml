<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="search"
            type="com.example.myuni.ui.fragment.AddUserFragment" />

        <variable
            name="adapter"
            type="com.example.myuni.adapter.ContactsAdapter" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".ui.fragment.AddUserFragment">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/et_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter email to search users" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/et_input"
                android:text="Search"
                android:layout_marginLeft="30dp"
                android:onClick="@{() -> search.searchUser()}"/>


        </RelativeLayout>

        <ListView
            android:id="@+id/lv_newUser"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/rl1"
            app:adapter="@{adapter}"/>

    </RelativeLayout>

</layout>