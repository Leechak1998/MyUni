<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="commentAdapter"
            type="com.example.myuni.adapter.CommentAdapter" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.PostingDetailsFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/tv_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Tittle"
                android:textSize="25dp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv_tittle"
                android:src="@drawable/profile_default" />

            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tittle"
                android:layout_toEndOf="@id/iv_profile"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:text="author" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_author"
                android:layout_toEndOf="@id/iv_profile"
                android:paddingLeft="10dp"
                android:text="time" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_profile"
                android:layout_marginTop="0dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text=" shsihiohitaiohte thishsihiohitaiohte thishsihiohitaiohtethishsihiohitaiohtethishsihiohitaiohtethishsihiohitaiohteothishsihiohitaiohtethishsihiohitaiohte thishsihiohitaiohte thishsihiohitaiohte thishsihiohitaiohte thishsihiohitaiohte thishsihiohitaiohte thishsihiohitaiohtethishsihiohitaiohtethishsihiohitaiohtethishsihiohitaiohteo"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/ly"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_below="@id/tv_description">

                <ImageView
                    android:id="@+id/iv_image1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/profile_default" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.1" />

                <ImageView
                    android:id="@+id/iv_image2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/profile_default" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.1" />

                <ImageView
                    android:id="@+id/iv_image3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/profile_default" />

            </LinearLayout>

            <TextView
                android:id="@id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ly"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="#949494"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_category"/>

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/view"
                android:gravity="center_vertical"
                android:text="Comments"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_addComment"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_alignParentRight="true"
                android:layout_marginStart="236dp"
                android:layout_toEndOf="@id/tv"
                android:text="+" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/tv">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_commentsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView >
</layout>