<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.myuni.ui.fragment.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_navigation_login_to_navigation_register"
            app:destination="@id/navigation_register" />
        <action
            android:id="@+id/action_navigation_login_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_register"
        android:name="com.example.myuni.ui.fragment.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_navigation_register_to_navigation_login"
            app:destination="@id/navigation_login" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myuni.ui.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_contacts"
        android:name="com.example.myuni.ui.fragment.ContactsFragment"
        android:label="@string/title_contacts"
        tools:layout="@layout/fragment_contacts" >
        <action
            android:id="@+id/action_navigation_contacts_to_navigation_chat"
            app:destination="@id/navigation_chat" />
        <action
            android:id="@+id/action_navigation_contacts_to_navigation_addUser"
            app:destination="@id/navigation_addUser" />
    </fragment>

    <fragment
        android:id="@+id/navigation_addUser"
        android:name="com.example.myuni.ui.fragment.AddUserFragment"
        android:label="Add new user"
        tools:layout="@layout/fragment_add_user" >
        <action
            android:id="@+id/action_navigation_addUser_to_navigation_contacts"
            app:destination="@id/navigation_contacts" />
    </fragment>

    <fragment
        android:id="@+id/navigation_me"
        android:name="com.example.myuni.ui.fragment.MeFragment"
        android:label="@string/title_me"
        tools:layout="@layout/fragment_me" >
        <action
            android:id="@+id/action_navigation_me_to_navigation_login"
            app:destination="@id/navigation_login" />
    </fragment>

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.myuni.ui.fragment.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_shop"
        android:name="com.example.myuni.ui.fragment.ShopFragment"
        android:label="Shop"
        tools:layout="@layout/fragment_shop" >
        <action
            android:id="@+id/action_navigation_shop_to_navigation_sell"
            app:destination="@id/navigation_sell" />
    </fragment>

    <fragment
        android:id="@+id/navigation_sell"
        android:name="com.example.myuni.ui.fragment.SellFragment"
        android:label="Sell"
        tools:layout="@layout/fragment_sell" >
        <action
            android:id="@+id/action_navigation_sell_to_navigation_shop"
            app:destination="@id/navigation_shop" />
    </fragment>

    <fragment
        android:id="@+id/navigation_goodsDetails"
        android:name="com.example.myuni.ui.fragment.GoodsDetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_goods_details" />

    <fragment
        android:id="@+id/navigation_myOrder"
        android:name="com.example.myuni.ui.fragment.MyOrderFragment"
        android:label="My Order"
        tools:layout="@layout/fragment_my_order" />

    <fragment
        android:id="@+id/navigation_orderDetails"
        android:name="com.example.myuni.ui.fragment.OrderDetailsFragment"
        android:label="Order Details"
        tools:layout="@layout/fragment_sell" />

    <fragment
        android:id="@+id/navigation_posting"
        android:name="com.example.myuni.ui.fragment.PostingFragment"
        android:label="PostingsList"
        tools:layout="@layout/fragment_posting" />

    <fragment
        android:id="@+id/navigation_publish"
        android:name="com.example.myuni.ui.fragment.PublishFragment"
        android:label="Publish"
        tools:layout="@layout/fragment_publish" />

    <fragment
        android:id="@+id/navigation_postingDetails"
        android:name="com.example.myuni.ui.fragment.PostingDetailsFragment"
        android:label="Posting"
        tools:layout="@layout/fragment_posting_details" />

    <fragment
        android:id="@+id/navigation_myPostings"
        android:name="com.example.myuni.ui.fragment.MyPostingFragment"
        android:label="MyPostings"
        tools:layout="@layout/fragment_my_posting" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.myuni.ui.fragment.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_newsDetails"
        android:name="com.example.myuni.ui.fragment.NewsDetailsFragment"
        android:label="NewsDetails"
        tools:layout="@layout/fragment_news_details" />

</navigation>